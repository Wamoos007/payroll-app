{
  "name": "payroll-app",
  "version": "1.2.0",
  "description": "Payroll Desktop Application",
  "main": "main.js",
  "author": "Waleed Moos",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "server": "node server/app.js",
    "client": "cd client && npm start",
    "electron-dev": "npx electron .",
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run electron-dev\"",
    "build-react": "cd client && npm run build",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "nodemailer": "^8.0.1",
    "pdfkit": "^0.17.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "concurrently": "^9.2.1",
    "electron": "^28.3.3",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.payroll.app",
    "productName": "Payroll App",
    "asar": true,
    "files": [
      "server/**/*",
      "client/build/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "artifactName": "PayrollApp-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
