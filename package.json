{
  "name": "payroll-app",
  "version": "2.3.0",
  "description": "Payroll Desktop Application",
  "main": "main.js",
  "author": "Waleed Moos",
  "license": "ISC",
  "postinstall": "electron-rebuild",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run electron-dev\"",
    "server": "cross-env NODE_ENV=development node server/app.js",
    "client": "cd client && npm start",
    "electron-dev": "cross-env NODE_ENV=development electron .",
    "build-client": "cd client && npm run build",
    "build": "npm run build-client && cross-env NODE_ENV=production electron-builder",
    "start": "cross-env NODE_ENV=production electron ."
  },
  "dependencies": {
    "@blackglory/better-sqlite3-migrations": "^0.1.20",
    "better-sqlite3": "8.4.0",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "nodemailer": "^8.0.1",
    "pdfkit": "^0.17.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "25.9.8",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.payroll.app",
    "productName": "Payroll App",
    "asar": true,
    "files": [
      "server/**/*",
      "client/build/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "artifactName": "PayrollApp-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true

    }
  }
}
